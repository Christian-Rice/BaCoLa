//imports

import "%MFOLDER%/fs"

//ignore warns and errors

!TOGGLEIGNORE

//variables

setvar "id" = #1#.
setvar "count" = #10#.
setvar "bits" = #8#.

//file creator

mkdir "files".
loop (getvar "count") {
  setvar "f" = open (> "files/" & (> (getvar "id") & ".txt")).
  write (getvar "f") = "".
  wait #5#.
  loop (getvar "bits") {.
    append (getvar "f") = (randombool ? "1" : "0").
    wait #5#.
  }
  setvar "id" = (# (getvar "id") + 1 #).
}